<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".android.GameFragment">

    <ImageView
        android:id="@+id/transparent_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@android:drawable/screen_background_dark_transparent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-27dp" />

    <TextView
        android:id="@+id/display_grid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="55sp"
        android:textStyle="bold"
        android:text=""
        android:textColor="@color/colorTextRaw"
        app:layout_constraintBottom_toTopOf="@+id/transparent_bg"
        app:layout_constraintEnd_toStartOf="@+id/transparent_bg"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/transparent_bg"
        app:layout_constraintTop_toBottomOf="@+id/transparent_bg" />

</androidx.constraintlayout.widget.ConstraintLayout>